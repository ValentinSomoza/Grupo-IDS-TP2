#:kivy 2.1.0

<ReservaItem@BoxLayout>:
    size_hint_y: None
    height: self.minimum_height
    padding: 15
    spacing: 10
    orientation: "vertical"

    canvas.before:
        Color:
            rgba: 0.95, 0.95, 1, 1
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [12]

    Label:
        id: texto
        text: ""
        font_size: 16
        color: 0.1, 0.1, 0.3, 1
        halign: "left"
        valign: "top"
        text_size: self.width - 10, None
        size_hint_y: None
        height: self.texture_size[1]

    Button:
        id: btn_detalle
        text: "Ver Detalle"
        size_hint_y: None
        height: 40
        background_color: 0.3, 0.3, 0.8, 1
        color: 1, 1, 1, 1
        font_size: 16

<MisReservasScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 15

        Label:
            text: "Mis Reservas"
            size_hint_y: None
            height: 60
            font_size: 28
            bold: True
            color: 0.1, 0.1, 0.3, 1

        ScrollView:
            do_scroll_x: False
            bar_width: 8
            scroll_type: ['bars', 'content']

            BoxLayout:
                id: lista_reservas
                orientation: "vertical"
                size_hint_y: None
                height: self.minimum_height
                spacing: 12
                padding: [0, 5]

        Button:
            text: "Volver"
            size_hint_y: None
            height: 50
            background_color: 0.3, 0.3, 0.8, 1
            color: 1, 1, 1, 1
            font_size: 20
            on_release: root.go_to_screen("menu_principal", "slide")