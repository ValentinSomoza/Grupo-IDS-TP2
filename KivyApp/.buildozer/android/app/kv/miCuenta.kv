#:kivy 2.3.1
#:import StyledButton widgets.styledButton.StyledButton

<MiCuentaScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: 40
        spacing: 25

        Label:
            text: "Mi Perfil"
            font_size: 36
            color: 0.1, 0.1, 0.1, 1
            bold: True
            size_hint_y: None
            height: dp(50)

        BoxLayout:
            orientation: "vertical"
            spacing: 12
            padding: 20
            size_hint_y: None
            height: self.minimum_height

            canvas.before:
                Color:
                    rgba: 0.96, 0.96, 0.96, 1
                RoundedRectangle:
                    radius: [16]
                    pos: self.pos
                    size: self.size

            BoxLayout:
                spacing: 10
                size_hint_y: None
                height: dp(30)
                Label:
                    text: "Nombre:"
                    color: 0.1, 0.1, 0.1, 1
                    bold: True
                    size_hint_x: .4
                Label:
                    id: lbl_nombre
                    text: ""
                    color: 0.1, 0.1, 0.1, 1

            BoxLayout:
                spacing: 10
                size_hint_y: None
                height: dp(30)
                Label:
                    text: "Apellido:"
                    color: 0.1, 0.1, 0.1, 1
                    bold: True
                    size_hint_x: .4
                Label:
                    id: lbl_apellido
                    text: ""
                    color: 0.1, 0.1, 0.1, 1

            BoxLayout:
                spacing: 10
                size_hint_y: None
                height: dp(30)
                Label:
                    text: "Email:"
                    color: 0.1, 0.1, 0.1, 1
                    bold: True
                    size_hint_x: .4
                Label:
                    id: lbl_email
                    text: ""
                    color: 0.1, 0.1, 0.1, 1

            BoxLayout:
                spacing: 10
                size_hint_y: None
                height: dp(30)
                Label:
                    text: "Teléfono:"
                    color: 0.1, 0.1, 0.1, 1
                    bold: True
                    size_hint_x: .4
                Label:
                    id: lbl_telefono
                    text: ""
                    color: 0.1, 0.1, 0.1, 1

            BoxLayout:
                spacing: 10
                size_hint_y: None
                height: dp(30)
                Label:
                    text: "DNI / Pasaporte:"
                    color: 0.1, 0.1, 0.1, 1
                    bold: True
                    size_hint_x: .4
                Label:
                    id: lbl_dni
                    text: ""
                    color: 0.1, 0.1, 0.1, 1

            BoxLayout:
                spacing: 10
                size_hint_y: None
                height: dp(30)
                Label:
                    text: "Usuario:"
                    color: 0.1, 0.1, 0.1, 1
                    bold: True
                    size_hint_x: .4
                Label:
                    id: lbl_usuario
                    text: ""
                    color: 0.1, 0.1, 0.1, 1

            BoxLayout:
                spacing: 10
                size_hint_y: None
                height: dp(30)
                Label:
                    text: "Fecha de creación:"
                    color: 0.1, 0.1, 0.1, 1
                    bold: True
                    size_hint_x: .4
                Label:
                    id: lbl_fecha_creacion
                    text: ""
                    color: 0.1, 0.1, 0.1, 1

        StyledButton:
            text: "Volver"
            size_hint_y: None
            height: 55
            font_size: 20
            on_release: root.volver()